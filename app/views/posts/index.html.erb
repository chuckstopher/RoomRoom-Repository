<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table table-hover">
<thead>
    <tr>
      <th></th>
      <th>Listing</th>
      <th>Last Updated</th>
      <th>User Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><li><%=link_to gravatar_tag post.user.email, user_path(post.user) %></th>
        <td><%= post.title %></td>
        <td><%= post.updated_at.to_date %></td>
        <td><%= link_to post.user.user_name, user_path(post.user) %></td>
        <td><%= link_to image_tag post.image.url(:medium), target: '_blank' %></td>
       
        <td><%= link_to 'View Room', post %></td>
        <td><div class="fb-like" data-share="true" data-width="450" data-show-faces="true"></div></td>
        <% if post.user == current_user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
  </tbody>
</table>
