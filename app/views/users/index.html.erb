<h1>All Users</h1>
<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Pets</th>
      <th>Cleanliness</th>
      <th>Smoker?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.user_pets %></td>
        <td><%= user.user_cleanliness %></td>
        <td><%= user.user_smoke %></td>
        <%= link_to image_tag user.post.image.url, target: '_blank' %>
        <% end %>
      </tr>
  </tbody>
</table>
